<div class="modal-dialog">
  <div class="modal-content">
    <%= form_with url: custom_description_admin_company_evaluation_user_capability_path(company_evaluation_id: @company_evaluation.id), method: :post do %>
      <%= hidden_field_tag :company_evaluation_id, @company_evaluation.id %>
      <%= hidden_field_tag :company_evaluation_template_id, @evaluation_user_capability.company_evaluation_template.id %>
      <%= hidden_field_tag :user_id, @evaluation_user_capability.user_id %>
      <div class="modal-header">
        <h5 class="modal-title"><%= t(".title") -%></h5>
        <button class="btn-close" type="button" data-coreui-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="row mb-3">
            <%= label_tag :capability_id, t('evaluation.capabilities'), class: 'col-3 col-form-label' %>
            <div class="col-9">
              <%= select_tag :capability_id, options_from_collection_for_select(Capability.where(en_name: @evaluation_user_capability.not_nil_capability_column_names), "id", "name"), class: 'form-control' -%>
            </div>
          </div>
          <div class="row">
            <%= label_tag :description, t("capability.description"), class: 'col-3 col-form-label' %>
            <div class="col-9">
              <%= text_area_tag :description, nil, class: "form-control", rows: 5 %>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= submit_tag t('form.create'), class: 'btn btn-primary', data: {'coreui-dismiss': :modal} %>
        <button class="btn btn-secondary" type="button" data-coreui-dismiss="modal"><%= t("form.close") -%></button>
      </div>
    <% end %>
  </div>
</div>
