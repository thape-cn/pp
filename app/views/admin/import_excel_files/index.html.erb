<% content_for :head do %>
  <%= append_javascript_pack_tag 'stimulus' %>
<% end %>

<div class="row justify-content-center">
  <div class="col-lg-12">
    <div class="container">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>No.</th>
            <th><%= t('user.chinese_name') -%></th>
            <th><%= t('user.clerk_code') -%></th>
            <th><%= t('import_exports.import_type_title') -%></th>
            <th><%= t('import_exports.title') -%></th>
            <th><%= t('form.status_time') -%></th>
          </tr>
        </thead>
        <tbody>
          <% @import_excel_files.each_with_index do |ief, index| %>
            <tr>
              <td><%= index -%></td>
              <td><%= ief.user.chinese_name -%></td>
              <td><%= ief.user.clerk_code -%></td>
              <td><%= ief.import_type -%></td>
              <td><%= ief.title -%></td>
              <td><%= local_time(ief.created_at) -%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>
