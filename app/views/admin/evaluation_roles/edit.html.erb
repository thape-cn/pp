<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <%= form_with model: @evaluation_role, url: admin_evaluation_role_path(id: @evaluation_role.id), method: :put do |f| %>
      <div class="modal-header">
        <h5 class="modal-title"><%= t(".title", role_name: @evaluation_role.role_name) -%></h5>
        <button class="btn-close" type="button" data-coreui-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="row mb-3">
            <%= f.label :capabilities, t('evaluation.capabilities'), class: 'col-2 col-form-label' %>
            <div class="col-10" data-controller="selectizes">
              <%= f.select :capability_ids, Capability.all.collect { |c| [ c.display_name, c.id ] }, {}, multiple: true, class: 'form-control', data: { 'selectizes-target': 'select' } -%>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit t('form.update'), class: 'btn btn-primary', data: {'coreui-dismiss': :modal} %>
        <button class="btn btn-secondary" type="button" data-coreui-dismiss="modal"><%= t("form.close") -%></button>
      </div>
    <% end %>
  </div>
</div>
