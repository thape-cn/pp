<div class="modal-dialog">
  <div class="modal-content">
    <%= form_with model: @evaluation_user_capability, url: admin_evaluation_user_capability_path(id: @evaluation_user_capability.id), method: :delete do |f| %>
      <div class="modal-header">
        <h5 class="modal-title"><%= t(".title") -%></h5>
        <button class="btn-close" type="button" data-coreui-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p><%= t(".confirm", name: @evaluation_user_capability.user.chinese_name, title: @evaluation_user_capability.company_evaluation_template.title) -%></p>
        <div class="container-fluid">
          <div class="row mb-2">
            <%= f.label :deleted_reason, t('evaluation.deleted_reason'), class: 'col-3 col-form-label' %>
            <div class="col-9">
              <%= f.text_field :deleted_reason, class: 'form-control' -%>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit t('form.confirm'), class: 'btn btn-primary', data: {'coreui-dismiss': :modal} %>
        <button class="btn btn-secondary" type="button" data-coreui-dismiss="modal"><%= t("form.close") -%></button>
      </div>
    <% end %>
  </div>
</div>
