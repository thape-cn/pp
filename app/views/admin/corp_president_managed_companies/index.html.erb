<% content_for :head do %>
  <%= append_javascript_pack_tag 'stimulus' %>
<% end %>

<div class="row justify-content-center">
  <div class="col-lg-12">
    <table class="table table-striped table-bordered" data-datatables-target="datatable">
      <thead>
        <tr>
          <th><%= t('user.company') -%></th>
          <th><%= t('user.corp_president_name') -%></th>
        </tr>
      </thead>
      <tbody>
        <% @corp_president_managed_companies.each do |cpmc| %>
          <tr>
            <td><%= cpmc.managed_company -%></td>
            <td>
              <%= cpmc.user.chinese_name -%>
              <%= link_to impersonation_admin_user_path(id: cpmc.user_id), class: 'pe-1', data: {controller: "modal", action: "modal#click"} do %>
                <%= svg_icon('free.svg#cil-account-logout', %w[icon icon-lg pt-1]) -%>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
