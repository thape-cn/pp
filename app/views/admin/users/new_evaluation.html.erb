<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <%= form_with model: @evaluation_user_capability, url: admin_evaluation_user_capabilities_path do |f| %>
      <div class="modal-header">
        <h5 class="modal-title"><%= t(".title") -%></h5>
        <button class="btn-close" type="button" data-coreui-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <%= f.hidden_field :user_id %>
          <div class="row mb-3">
            <%= f.label :company_evaluation_template_id, t(".company_evaluation_template"), class: 'col-3 col-form-label' %>
            <div class="col-9">
              <%= f.select :company_evaluation_template_id, CompanyEvaluationTemplate.where(company_evaluation_id: @company_evaluation_id).pluck(:title, :id), {}, { class: "form-control" } %>
            </div>
          </div>
          <div class="row mb-3">
            <%= f.label :job_role_id, t("user.job_role"), class: 'col-3 col-form-label' %>
            <div class="col-9">
              <%= f.select :job_role_id, @user.job_roles.collect { |r| ["#{r.job_code}#{r.job_family}", r.id]}, {}, { class: "form-control" } %>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit t('form.confirm'), class: 'btn btn-primary', data: {'coreui-dismiss': :modal} %>
        <button class="btn btn-secondary" type="button" data-coreui-dismiss="modal"><%= t("form.close") -%></button>
      </div>
    <% end %>
  </div>
</div>
