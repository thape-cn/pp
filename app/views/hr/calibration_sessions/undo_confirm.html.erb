<div class="modal-dialog modal-sm">
  <div class="modal-content">
    <%= form_with model: @calibration_session, url: undo_hr_calibration_session_path(id: @calibration_session.id), method: :put do |f| %>
      <div class="modal-header">
        <h5 class="modal-title"><%= t(".title") -%></h5>
        <button class="btn-close" type="button" data-coreui-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <% unless @calibration_session.session_status.in?(%w[proofreading]) %>
            <%= t('.calibration_session_status_not_in_proofreading') %>
          <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <% if @calibration_session.session_status.in?(%w[proofreading]) %>
          <%= f.submit t('form.confirm'), class: 'btn btn-primary', data: {'coreui-dismiss': :modal} %>
        <% end %>
        <button class="btn btn-secondary" type="button" data-coreui-dismiss="modal"><%= t("form.close") -%></button>
      </div>
    <% end %>
  </div>
</div>
