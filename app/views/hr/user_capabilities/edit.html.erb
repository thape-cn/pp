<div class="modal-dialog">
  <div class="modal-content">
    <%= form_with model: @evaluation_user_capability, url: hr_company_evaluation_user_capability_path(id: @evaluation_user_capability.id, company_evaluation_id: @company_evaluation.id), method: :patch do |f| %>
      <div class="modal-header">
        <h5 class="modal-title"><%= t(".title") -%></h5>
        <button class="btn-close" type="button" data-coreui-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="row mb-3">
            <%= f.label :form_status, t('evaluation.evaluation_status'), class: 'col-4 col-form-label' %>
            <div class="col-8">
              <%= f.select :form_status, EvaluationUserCapability.form_status_options, {}, class: 'form-control' -%>
            </div>
          </div>
          <% if @calibration_session.present? %>
            <div class="row mb-2">
              <div class="alert alert-primary" role="alert">
                <%= t('.calibration_status_change_notice') -%>
                <%= link_to t('form.click_to_go'), hr_calibration_session_path(id: @calibration_session.id), class: 'alert-link' -%>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit t('form.update'), class: 'btn btn-primary', data: {'coreui-dismiss': :modal} %>
        <button class="btn btn-secondary" type="button" data-coreui-dismiss="modal"><%= t("form.close") -%></button>
      </div>
    <% end %>
  </div>
</div>
